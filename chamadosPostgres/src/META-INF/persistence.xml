    <class>br.ufmt.ic.posbd.chamadosPostgres.entidade.Solicitante</class>
    <class>br.ufmt.ic.posbd.chamadosPostgres.entidade.Registros</class>
    
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://192.168.100.180:5432/chamados"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
